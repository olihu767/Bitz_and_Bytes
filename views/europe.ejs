<%- include('./partials/css-global'); %>
<%- include('./partials/head'); %>
<%- include('./partials/header'); %>

<body class="book">
  <main class="book_form">
    <form action="/bookings" method="post">
      <div class="container_book">
        <legend id="europe">Please complete the form to book our European Vacation Package</legend>
        <label for="firstName" class="required">First Name</label>
        <input type="text" placeholder="First Name" name="firstName" required>
        <label for="lastName" class="required">Last Name</label>
        <input type="text" placeholder="Last Name" name="lastName" required>
        <label for="homePhone" class="required">Home Phone</label>
        <input type="text" placeholder="Home Phone Number" name="homePhone" required>
        <label for="busPhone" class="required">Business Phone</label>
        <input type="text" placeholder="Business Phone Number" name="busPhone" required>
        <label for="travelerCount" class="required">Travelers</label>
        <input type="text" placeholder="Enter number of Travelers" name="travelerCount" required>
        <button>Submit!</button>
      </div>
    </form>
  </main>
</body>

