<body class="book">
  <div class="container_book"></div>
  <form class = "book_form"  action="/bookings" method="post">
<h2 id="polynesia">Please complete form to book our Polynesian Paradise Package</h2>
<label for="bookingDate">Booking Date:</label>
<input type = "date" placeholder = <%= moment().format('YYYY-MM-DD')%> name = "bookingDate">
<input type = "text" placeholder = "Enter First Name" name = "firstName" required>
<input type = "text" placeholder = "Enter Last Name" name = "lastName" required>
<input type = "text" placeholder = "Enter Home Phone Number" name = "homePhone" required>
<input type = "text" placeholder = "Enter Business Phone Number" name = "busPhone" required>
<input type = "text" placeholder = "Enter number of Travelers" name = "travelerCount" required>
<button>Submit Your Booking</button>
</body>
